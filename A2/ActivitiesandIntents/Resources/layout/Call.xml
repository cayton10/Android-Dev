<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/mainActivityBackGroundColor"
	android:weightSum="1">
	<TextView
		android:layout_marginTop="@dimen/phone_num_margin_top"
		android:textAlignment="center"
		android:text="@string/phone_number"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:id="@+id/phoneNumber" />
	<Button
		android:text="@string/call"
		android:background="@drawable/marshallbutton"
		android:textColor="@color/textButtonColor"
		android:layout_marginTop="@dimen/button_margin_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/placeCall" />
	<FrameLayout
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight=".75"
		android:id="@+id/frameLayout1" >
	</FrameLayout>
	<Button
		android:text="@string/cancel_button"
		android:background="@color/cancelButtonColor"
		android:textColor="@color/textButtonColor"
		android:layout_marginHorizontal="@dimen/button_margins_horiz"
		android:layout_marginTop="@dimen/button_margin_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/cancelCall" />
	
</LinearLayout>
